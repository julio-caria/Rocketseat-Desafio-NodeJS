{
  "name": "rocketseat-desafio-nodejs",
  "version": "1.0.0",
  "description": "O projeto em questao e voltado para o desenvolvimento de uma API completa, utilizando NodeJS, conhecendo os principais fundamentos, incluindo updates do ecossistema do NodeJS.",
  "main": "index.js",
  "scripts": {
    "dev": "node --env-file .env --watch --experimental-strip-types --no-warnings src/server.ts",
    "db:seed": "node --env-file .env src/database/seed.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "pretest": "dotenv -e .env.test drizzle-kit migrate",
    "test": "dotenv -e .env.test vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/julio-caria/Rocketseat-Desafio-NodeJS.git"
  },
  "author": "Julio Caria",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/julio-caria/Rocketseat-Desafio-NodeJS/issues"
  },
  "homepage": "https://github.com/julio-caria/Rocketseat-Desafio-NodeJS#readme",
  "dependencies": {
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@scalar/fastify-api-reference": "^1.34.2",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-orm": "^0.44.4",
    "fastify": "^5.5.0",
    "fastify-type-provider-zod": "^5.0.3",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/node": "^24.2.1",
    "@types/supertest": "^6.0.3",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "supertest": "^7.1.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
